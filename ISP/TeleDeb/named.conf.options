options {
    directory "/var/cache/bind";

    forwarders {
        8.8.8.8;
        1.1.1.1;
    };

    allow-query { any; };
    dns64 2001:db8:ffff::/96 {
        clients { any; };
        exclude { any; };
        
        break-dnssec yes;
    };

    dnssec-validation auto;
    
    listen-on-v6 { any; };
};
